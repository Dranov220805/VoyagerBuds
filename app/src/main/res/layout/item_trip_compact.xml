<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Trip Icon/Indicator -->
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="@color/main_color_voyager"
            android:layout_marginEnd="12dp" />

        <!-- Trip Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Trip Name -->
            <TextView
                android:id="@+id/tv_trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_name"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Destination & Duration -->
            <TextView
                android:id="@+id/tv_trip_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_range_example"
                android:textColor="@color/text_medium"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Arrow Icon -->
            <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_more"
            android:rotation="270"
                android:contentDescription="@string/more"
            app:tint="@color/text_medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
