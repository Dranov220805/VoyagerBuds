<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/iv_schedule_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/divider_light"
        android:contentDescription="@string/schedule_image_desc" />

    <ImageButton
        android:id="@+id/btn_remove_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:background="@drawable/bg_circle_semitransparent"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/error"
        android:contentDescription="@string/remove_image"
        android:padding="4dp"
        android:scaleType="fitCenter" />

</FrameLayout>
