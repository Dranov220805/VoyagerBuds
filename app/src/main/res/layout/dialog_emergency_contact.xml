<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emergency_contacts"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/btn_close_dialog"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/text_medium"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inactivity Timeout"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinner_timeout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input_outline"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact Email"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_emergency_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter relative's email"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="@drawable/bg_input_outline"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_save_emergency"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="SAVE SETTINGS"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"/>

</LinearLayout>