<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:minHeight="600dp">

        <!-- Back Arrow and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                app:tint="@color/text_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_trip_schedule"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <!-- Progress Indicator (5 dots) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator_active"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator" />
            </LinearLayout>
        </LinearLayout>

        <!-- Calendar Icon with Ripple Effect -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp">

            <!-- Outer circle -->
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle_ripple_outer"
                android:layout_gravity="center" />

            <!-- Middle circle -->
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_ripple_middle"
                android:layout_gravity="center" />

            <!-- Inner circle with icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_schedule"
                android:background="@drawable/circle_ripple_inner"
                android:padding="20dp"
                app:tint="@color/teal_primary"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- Ready to plan your days? -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready_to_plan_days"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
<!--        <TextView-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="32dp"-->
<!--            android:layout_marginEnd="32dp"-->
<!--            android:text="@string/build_itinerary_message"-->
<!--            android:textSize="14sp"-->
<!--            android:textColor="@color/text_medium"-->
<!--            android:textAlignment="center"-->
<!--            android:layout_marginBottom="32dp" />-->

        <!-- Set Up Schedule Now Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_schedule_now"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/set_up_schedule_now"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_primary"
            app:cornerRadius="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp" />

        <!-- I'll Do It Later Link -->
        <TextView
            android:id="@+id/btn_add_schedule_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ill_do_it_later"
            android:textSize="16sp"
            android:textColor="@color/teal_primary"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_gravity="center" />

    </LinearLayout>

</ScrollView>