<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".fragments.HomeFragment">

    <!-- Upper Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upper_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/card_background"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Name/Logo -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profile_icon"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/text_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/upper_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Current Trip Header -->
            <TextView
                android:id="@+id/tv_current_trip_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_trip"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- Current Trip Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_hero_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Top Section: Image Background -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp">

                        <!-- Background Image -->
                        <ImageView
                            android:id="@+id/img_hero_trip"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/voyagerbuds_nobg"
                            android:background="@color/card_background"
                            android:contentDescription="@string/desc_trip_image" />

                        <!-- Gradient Overlay -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_overlay" />

                        <!-- Trip Info Container -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_right">

                            <!-- Trip Name -->
                            <TextView
                                android:id="@+id/tv_hero_trip_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/example_hero_trip_name"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:shadowColor="#80000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2"/>

                            <!-- Date Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="6dp">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/white"
                                    android:layout_marginEnd="8dp"/>
                                <TextView
                                    android:id="@+id/tv_hero_trip_dates"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/example_hero_dates"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <!-- Location Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="@color/white"
                                    android:layout_marginEnd="8dp"/>
                                <TextView
                                    android:id="@+id/tv_hero_trip_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/example_location_tokyo"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Right Arrow -->
                        <ImageView
                            android:id="@+id/iv_arrow_right"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/white"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Bottom Section: Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@color/card_background">

                        <!-- Notes -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top"
                            android:layout_marginBottom="16dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_edit"
                                app:tint="@color/text_tertiary"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="0dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_notes_colon"
                                    android:textStyle="bold"
                                    android:textColor="@color/musebox_green"
                                    android:textSize="15sp"/>
                                <TextView
                                    android:id="@+id/tv_hero_trip_notes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/example_trip_notes"
                                    android:textColor="@color/text_tertiary"
                                    android:textSize="15sp"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Schedule -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top"
                            android:layout_marginBottom="16dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_schedule"
                                app:tint="@color/text_tertiary"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="0dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_schedule_colon"
                                    android:textStyle="bold"
                                    android:textColor="@color/musebox_green"
                                    android:textSize="15sp"/>
                                <TextView
                                    android:id="@+id/tv_hero_trip_schedule"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/example_schedule_arrival_tokyo"
                                    android:textColor="@color/text_tertiary"
                                    android:textSize="15sp"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Expenses -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_wallet"
                                app:tint="@color/text_tertiary"
                                android:layout_marginEnd="16dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_total_expenses"
                                    android:textStyle="bold"
                                    android:textColor="@color/musebox_green"
                                    android:textSize="15sp"/>
                                <TextView
                                    android:id="@+id/tv_hero_trip_expenses"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/example_money_2500"
                                    android:textColor="@color/main_color_voyager"
                                    android:textStyle="bold"
                                    android:textSize="15sp"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Upcoming Trips Section -->
            <TextView
                android:id="@+id/tv_upcoming_trips_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upcoming_trips"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_upcoming_trips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false"
                android:visibility="gone" />

            <!-- Finished Trips Section -->
            <TextView
                android:id="@+id/tv_past_trips_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/past_trips"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_past_trips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false"
                android:visibility="gone" />

            <!-- Captured Memories Section -->
            <TextView
                android:id="@+id/tv_memories_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/captured_memories"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_memories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:clipToPadding="false" />

            <!-- Show More Memories Button -->
            <TextView
                android:id="@+id/tv_show_more_memories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_more"
                android:textSize="14sp"
                android:textColor="@color/teal_primary"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
        android:contentDescription="@string/desc_add_trip"
        app:backgroundTint="@color/teal_primary"
        app:tint="@color/white"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp" />

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/tv_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_empty_logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@android:drawable/ic_dialog_map"
            android:alpha="0.2"
            android:contentDescription="@string/no_trips"
            app:tint="@color/teal_primary" />

        <TextView
            android:id="@+id/tv_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_discover"
            android:textSize="28sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/tv_empty_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_adventure"
            android:textSize="16sp"
            android:textColor="@color/text_medium"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>