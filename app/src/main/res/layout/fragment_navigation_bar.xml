<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_bar_height"
    android:orientation="horizontal"
    android:background="@color/white"
    android:elevation="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/spacing_small">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/home"
            android:scaleType="fitStart"
            app:tint="@color/teal_primary" />
    </LinearLayout>

    <!-- Schedule -->
    <LinearLayout
        android:id="@+id/nav_schedule"
        android:layout_width="0dp"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/spacing_small">

        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:src="@drawable/ic_schedule"
            android:contentDescription="@string/schedule"
            android:scaleType="fitStart"
            app:tint="@color/text_medium" />
    </LinearLayout>

    <!-- Capture -->
    <LinearLayout
        android:id="@+id/nav_capture"
        android:layout_width="0dp"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/spacing_small">

        <ImageView
            android:id="@+id/icon_create"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:src="@drawable/ic_camera"
            android:contentDescription="@string/capture"
            android:scaleType="fitStart"
            app:tint="@color/text_medium" />
    </LinearLayout>

    <!-- Map -->
    <LinearLayout
        android:id="@+id/nav_map"
        android:layout_width="0dp"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/spacing_small">

        <ImageView
            android:id="@+id/icon_playlist"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:src="@drawable/ic_map"
            android:contentDescription="@string/map"
            android:scaleType="fitStart"
            app:tint="@color/text_medium" />
    </LinearLayout>

    <!-- Dashboard -->
    <LinearLayout
        android:id="@+id/nav_dashboard"
        android:layout_width="0dp"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/spacing_small">

        <ImageView
            android:id="@+id/icon_dashboard"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:src="@drawable/ic_dashboard"
            android:contentDescription="@string/dashboard"
            android:scaleType="fitStart"
            app:tint="@color/text_medium" />
    </LinearLayout>

</LinearLayout>