<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <!-- Day Header -->
    <LinearLayout
        android:id="@+id/layout_content_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="44dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

            <TextView
            android:id="@+id/tv_day_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/day_title_example" />

            <TextView
            android:id="@+id/tv_day_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/day_events_example"
            android:textColor="#777777"
            android:textSize="13sp" />

    </LinearLayout>

    <!-- Timeline Container Wrapper -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Timeline Container -->
        <LinearLayout
            android:id="@+id/container_timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Timeline Line -->
            <View
                android:id="@+id/view_timeline_line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:background="#E0E0E0" />

            <!-- Events Container -->
            <LinearLayout
                android:id="@+id/container_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

