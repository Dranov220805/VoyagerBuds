<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_background"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Time -->
        <TextView
            android:id="@+id/tv_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_time_example"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Icon/Emoji with background -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_bg"
                    android:backgroundTint="@color/schedule_bg_tint" />

                <TextView
                    android:id="@+id/tv_schedule_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="ðŸ“…" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_schedule_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/visit_museum"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Notes/Description -->
                <TextView
                    android:id="@+id/tv_schedule_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/short_notes"
                    android:textSize="14sp"
                    android:textColor="@color/text_medium"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Location (optional) -->
                <LinearLayout
                    android:id="@+id/layout_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_location"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/text_medium"
                        android:contentDescription="@string/location" />

                    <TextView
                        android:id="@+id/tv_schedule_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_medium"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Participants (optional) -->
                <LinearLayout
                    android:id="@+id/layout_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/text_medium"
                        android:contentDescription="@string/profile" />

                    <TextView
                        android:id="@+id/tv_schedule_participants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_medium"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
