<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back Arrow and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

                <ImageView
                android:id="@+id/btn_back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                    android:contentDescription="@string/desc_back"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                app:tint="@color/text_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/confirm_your_trip"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <!-- Progress Indicator (3 dots) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator_active" />
            </LinearLayout>
        </LinearLayout>

        <!-- Trip Image -->
        <ImageView
            android:id="@+id/img_trip"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_dialog_map"
            android:contentDescription="@string/desc_trip_image"
            android:layout_marginBottom="24dp"
            android:background="@color/input_border" />

        <!-- Trip Name with Edit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_trip_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/example_trip_name_kyoto"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textSize="14sp"
                android:textColor="@color/teal_primary"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Trip Subtitle -->
            <TextView
                android:id="@+id/tv_trip_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_trip_subtitle_kyoto"
            android:textSize="14sp"
            android:textColor="@color/text_medium"
            android:layout_marginBottom="16dp" />

        <!-- Trip Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/teal_primary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/example_location_kyoto"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />
            </LinearLayout>

            <!-- Dates -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/teal_primary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_dates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/example_dates_kyoto"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />
            </LinearLayout>

            <!-- Travel Companions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/teal_primary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_companions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/example_companions_you_2"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />
            </LinearLayout>
        </LinearLayout>

        <!-- Let's Go Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_lets_go"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/lets_go"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_primary"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="16sp" />

    </LinearLayout>

</ScrollView>

