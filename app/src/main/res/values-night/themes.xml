<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VoyagerBuds" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="fontFamily">@font/quicksand_bold</item>
        <!-- App colors -->
        <item name="colorPrimary">@color/main_color_voyager</item>
        <item name="colorPrimaryVariant">@color/main_color_voyager</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/main_color_voyager</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_dark</item>
        <item name="colorOnBackground">@color/text_dark</item>

        <!-- Make MaterialButtons and regular Buttons use our app button style by default -->
        <item name="materialButtonStyle">@style/Widget.VoyagerBuds.Button</item>
        <item name="buttonStyle">@style/Widget.VoyagerBuds.Button</item>
        <item name="android:buttonStyle">@style/Widget.VoyagerBuds.Button</item>
    </style>

    <style name="Theme.VoyagerBuds" parent="Base.Theme.VoyagerBuds" />
    <style name="Theme.VoyagerBuds.NoActionBar" parent="Base.Theme.VoyagerBuds">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>