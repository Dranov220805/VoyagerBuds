<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls, Firebase, Google Maps -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Camera permission for taking trip photos -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Storage permissions for photo gallery -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    
    <!-- Android 13+ (API 33+) Photo/Video permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    
    <!-- Location permissions for Map and Travel tracking -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Background location for emergency alerts (optional, can be requested later) -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- Notification permission for emergency alerts (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Camera feature (not required, so app works on devices without camera) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VoyagerBuds">

        <!-- Permission Activity - Entry point -->
        <activity
            android:name=".activities.PermissionActivity"
            android:theme="@style/Theme.VoyagerBuds.NoActionBar"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--noinspection LockedOrientationActivity-->
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Base.Theme.VoyagerBuds"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.VoyagerBuds.NoActionBar"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:theme="@style/Theme.VoyagerBuds.NoActionBar"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.HomeActivity"
            android:theme="@style/Theme.VoyagerBuds.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
    </application>

</manifest>